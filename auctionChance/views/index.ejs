                disableOnInteraction: false,
            },
            pagination: {
                el: ".swiper-pagination",
                clickable: true,
            },
            navigation: {
                nextEl: ".swiper-button-next",
                prevEl: ".swiper-button-prev",
            },
            breakpoints: {
                1: {
                    slidesPerView: 1
                },
                768: {
                    slidesPerView: 2 // 왜 안되지... / centeredSlides: true 이거 때문이였음...
